<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.ManagerDao">
    <resultMap id="managerMap" type="entity.Manager">
        <id column="uid" property="uid"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="manager_type" property="managerType"/>
        <result column="create_datetime" property="createDateTime"/>
    </resultMap>

    <insert id="add" >
        insert into manager values(#{uid},#{password},#{name},#{managerType},#{createDateTime})
    </insert>

    <update id="update">
        update manager
        <set>
            <if test="password!=null">
                password=#{password},
            </if>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="managerType!=null">
                manager_type=#{managerType},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <select id="findByUid" resultMap="managerMap">
        select * from manager where uid=#{uid}
    </select>

    <delete id="delete">
        delete from manager where uid=#{uid}
    </delete>

    <select id="findByName" resultMap="managerMap">
        select *
        from manager
        where name=#{name}
    </select>
</mapper>