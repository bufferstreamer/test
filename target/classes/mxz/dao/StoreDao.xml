<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.StoreDao">
    <resultMap id="storeMap" type="entity.Store">
        <id column="uid" property="uid"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="audit_url" property="auditUrl"/>
        <result column="is_deposit" property="isDeposit"/>
        <result column="remark" property="remark"/>
        <result column="create_datetime" property="creatDateTime"/>
    </resultMap>

    <insert id="add" >
        insert into store values(#{uid},#{password},#{name},#{phone},#{auditUrl},#{isDeposit},#{remark},#{createDateTime})
    </insert>

    <update id="update">
        update store
        <set>
            <if test="password!=null">
                password=#{password},
            </if>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="phone!=null">
                phone=#{phone},
            </if>
            <if test="isDeposit!=null">
                is_deposit=#{isDeposit},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <select id="findByUid" resultMap="storeMap">
        select * from store where uid=#{uid}
    </select>

    <delete id="delete">
        delete from store where uid=#{uid}
    </delete>

    <select id="findByName" resultMap="storeMap">
        select *
        from store
        where name=#{name}
    </select>
</mapper>