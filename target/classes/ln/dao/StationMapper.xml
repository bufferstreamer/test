<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ln.dao.StationDao">

    <select id="getStationList" resultType="pojo.Station" >
        select * from storage.station;
    </select>
    <select id="getStationByID" parameterType="int" resultType="pojo.Station">
        select * from storage.station where station_id = #{station_id}
    </select>


    <insert id="addStation" parameterType="pojo.Station">
        insert into storage.station(station_name, station_location) VALUES (#{station_name},#{station_location})
    </insert>

    <update id="updateStation" parameterType="pojo.Station">
        update storage.station
        set station_name = #{station_name},station_location=#{station_location}
        where station_id = #{station_id};

    </update>


    <delete id="deleteStation" parameterType="int">
        delete from storage.station WHERE station_id = #{station_id}
    </delete>
</mapper>