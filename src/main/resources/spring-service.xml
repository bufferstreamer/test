<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:http="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/context/spring-aop.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/context/spring-tx.xsd">

    <!--扫描service下的包-->
    <context:component-scan base-package="ln.service"/>
    <context:component-scan base-package="mxz.service"/>
    <context:component-scan base-package="gsh.service"/>
<!--    <context:component-scan base-package="ljy.service"/>-->
<!--    <context:component-scan base-package="wzz.service"/>-->
    <import resource="spring-dao.xml"/>
    <!--声明式事务-->
    <bean id="ln-transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <!--        注入数据源-->
        <property name="dataSource" ref="ln-dataSource"/>
    </bean>
    <bean id="mxz-transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <!--        注入数据源-->
        <property name="dataSource" ref="mxz-dataSource"/>
    </bean>

</beans>